<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
      crossorigin="anonymous"
    />
    <title>Dashboard</title>
  </head>
  <body>
    <nav class="navbar navbar-light justify-content-evenly">
      <h2 class="nav-item navbar-brand navbar-expand p-2">
        Welcome <%=name%>!
      </h2>

      <ul class="navbar-nav mr-auto d-flex flex-row">
        <li class="nav-item p-2">
          <a href="/membership" class="nav-link">Membership</a>
        </li>
        <% if (isMember === "yes") { %>
        <li class="nav-item p-2"><a href="/post" class="nav-link">Post</a></li>
        <% } %>
        <li class="nav-item p-2">
          <a href="/log-out" class="nav-link">Log Out</a>
        </li>
      </ul>
    </nav>
    <main class="d-flex flex-column align-items-center">
      <h2 class="text-center">Messages</h2>
      <hr class="hr w-50" />
      <div class="w-50 p-2">
        <% messages.forEach(msg => { %>
        <figure class="text-center">
          <blockquote class="blockquote">
            <p class="mb-5 text-justify text-wrap"><%=msg.message%></p>
            <% if (isMember==="yes") { %>
            <footer class="blockquote-footer">
              <%=msg.author%>, <%=msg.date %>
            </footer>

            <% } %> <% if (isMember==="no") {%>
            <footer class="blockquote-footer">Anonymous</footer>
            <%}%>
          </blockquote>
        </figure>

        <%})%>
      </div>
    </main>
  </body>
</html>
